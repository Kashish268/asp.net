@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h3 class="display-4" style="text-align:center">Student View</h3>
    @* <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p> *@

    <form id="studentForm" style="max-width: 400px; margin: auto; padding: 20px; border: 1px solid #ccc; border-radius: 5px; background: #f9f9f9;">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" placeholder="Enter your name" required style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px;">

        <label for="address">Address</label>
        <input type="text" id="address" name="address" placeholder="Enter your address" required style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px;">

        <label for="mobile">Mobile Number</label>
        <input type="text" id="mobile" name="mobile" placeholder="Enter 10-digit mobile number" required maxlength="10" pattern="\d{10}" title="Enter a valid 10-digit mobile number" style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px;">

        <label for="branch">Branch</label>
        <input type="text" id="branch" name="branch" placeholder="Enter your branch" required style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px;">

        <label for="sem">Semester</label>
        <input type="number" id="sem" name="sem" placeholder="Enter your semester" required min="1" max="8" style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px;">

        <label for="result">Result</label>
        <select id="result" name="result" required style="width: 100%; padding: 8px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px;">
            <option value="">Select</option>
            <option value="pass">Pass</option>
            <option value="fail">Fail</option>
        </select>

        <div style="display: flex; justify-content: space-between;">
            <button type="button" onclick="submitForm()" style="background: #007bff; color: #fff; border: none; padding: 10px; border-radius: 4px; cursor: pointer; flex: 1; margin-right: 5px;">Submit</button>
           </div>
    </form>
</div>

